<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:background="@drawable/voice_layout_background"
              android:gravity="center"
              android:orientation="vertical">

    <Chronometer
        android:id="@+id/mVoiceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/mVoiceImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_chat_voice_speaking"/>

    <TextView
        android:id="@+id/mVoiceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/voice_cancel_background"
        android:text="手指上滑，取消发送"
        android:textColor="@color/black"
        android:textSize="12sp"/>
</LinearLayout>
